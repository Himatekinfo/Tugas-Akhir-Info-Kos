<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
        
        <TextView android:text="@string/nama_pemilik" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView android:text="@string/harga_sewa" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <ImageView
			android:contentDescription="@string/photo_of_location"
			android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView android:text="@string/no_telpon" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView android:text="@string/fasilitas" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <TextView android:text="@string/deskripsi" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
    </LinearLayout>

</ScrollView>
