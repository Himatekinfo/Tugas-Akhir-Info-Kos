<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnSekilasUika"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@android:color/darker_gray"
        android:text="Sekilas UIKA" />
    
    <Button
        android:id="@+id/btnInfoRumahSewa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@android:color/darker_gray"
        android:onClick="btnInfoRumahSewa_OnClick"
        android:text="Info Rumah Sewa" />
    
    <Button
        android:id="@+id/btnPencarian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@android:color/darker_gray"
        android:onClick="btnPencarian_onClick"
        android:text="Pencarian" />
    
    <Button
        android:id="@+id/btnTambahLokasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@android:color/darker_gray"
        android:onClick="btnTambahLokasi_onClick"
        android:text="Tambah Lokasi" />
    
    <Button
        android:id="@+id/btnAbout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@android:color/darker_gray"
        android:text="About" />
    
    <Button
        android:id="@+id/btnHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableTop="@android:color/darker_gray"
        android:text="Help" />

</LinearLayout>
