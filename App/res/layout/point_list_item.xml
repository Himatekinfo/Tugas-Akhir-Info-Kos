<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView android:id="@+list/txtOwnersName"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        />
    
    <TextView android:id="@+list/txtPicture"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        />
    
    <TextView android:id="@+list/txtRentPrice"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        />
    
    <TextView android:id="@+list/txtDistanceFromPosition"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        />
    
    <TextView android:id="@+list/txtDistanceFromCenter"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
        />

</LinearLayout>
